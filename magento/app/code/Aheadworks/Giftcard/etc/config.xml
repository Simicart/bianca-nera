<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <aw_giftcard>
            <email>
                <sender>general</sender>
            </email>
            <sms>
                <template>Congratulations!!
You have just received a gift card from {{var sender_name}} with the following details.
Card Value: {{var balance}}.
Gift Card Code: {{var codes}}.
Please access https://biancanera.pwa-commerce.com/ to redeem the gift card.
Thank you from Bianca.</template>
            </sms>
            <code_pattern>
                <code_length>12</code_length>
                <code_format>alphanumeric</code_format>
            </code_pattern>
        </aw_giftcard>
    </default>
</config>
