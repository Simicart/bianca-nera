<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="content">
    	<field name="content">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">Vnecoms_PageBuilder/content/content</item>
                	<item name="component" xsi:type="string">Vnecoms_PageBuilder/js/form/element/wysiwyg</item>
                	<!-- The wysiwyg editor object name -->
                	<item name="editor_obj_name" xsi:type="string">wysiwygcms_page_form_content</item>
                </item>
            </argument>
        </field>
        <field name="pagebuilder" class="Vnecoms\PageBuilder\Ui\Component\Form\Element\PageBuilder">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">fieldset</item>
                    <item name="label" xsi:type="string" translate="true">Page Builder</item>
                    <item name="template" xsi:type="string">Vnecoms_PageBuilder/content/page-builder</item>
                    <item name="component" xsi:type="string">Vnecoms_PageBuilder/js/form/element/page-builder</item>
                    <item name="pbResource" xsi:type="array">
                        <item name="0" xsi:type="string">page_builder</item>
                        <item name="1" xsi:type="string">pdf_pro_order</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
