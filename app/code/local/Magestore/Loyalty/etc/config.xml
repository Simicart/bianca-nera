<config>
    <modules>        
        <Magestore_Loyalty>
            <version>0.1.0</version>
        </Magestore_Loyalty>
    </modules>
    <frontend>
        <secure_url>
            <loyalty_passbook>/loyalty/passbook</loyalty_passbook>
        </secure_url>
        <routers>
            <loyalty>
                <use>standard</use>
                <args>
                    <module>Magestore_Loyalty</module>
                    <frontName>loyalty</frontName>
                </args>
            </loyalty>           
        </routers>
        <translate>
            <modules>
                <Magestore_Loyalty>
                    <files>
                        <default>Magestore_Loyalty.csv</default>
                    </files>
                </Magestore_Loyalty>
            </modules>
        </translate>
        <events>
            <connector_checkout_get_order_config_total>
                <observers>
                    <loyalty_frontend_observers>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>checkoutOrderConfigRewardPoints</method>
                    </loyalty_frontend_observers>
                </observers>
            </connector_checkout_get_order_config_total>
            <connector_catalog_get_product_detail_product_detail>
                <observers>
                    <loyalty_frontend_observers>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>productDetailRewardPoints</method>
                    </loyalty_frontend_observers>
                </observers>
            </connector_catalog_get_product_detail_product_detail>            
            <!--connector_checkout_save_shipping_method_total>
                <observers>
                    <loyalty_frontend_observers>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>checkoutOrderConfigRewardPoints</method>
                    </loyalty_frontend_observers>
                </observers>
            </connector_checkout_save_shipping_method_total>
            <simicart_after_place_order>
            	<observers>
                    <loyalty_frontend_observers>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>checkoutOrderPlaceAfter</method>
                    </loyalty_frontend_observers>
                </observers>
            </simicart_after_place_order> -->
        </events>
    </frontend>
    <admin>
        <routers>           
            <loyaltyadmin>
                <use>admin</use>
                <args>
                    <module>Magestore_Loyalty</module>
                    <frontName>loyaltyadmin</frontName>
                </args>
            </loyaltyadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>               
                <loyalty>
                    <file>loyalty.xml</file>
                </loyalty>
            </updates>
        </layout>
        <translate>
            <modules>                
                <Magestore_Loyalty>
                    <files>
                        <default>Magestore_Loyalty.csv</default>
                    </files>
                </Magestore_Loyalty>
            </modules>
        </translate> 
    </adminhtml>
    <global>
        <models>            
            <loyalty>
                <class>Magestore_Loyalty_Model</class>
                <resourceModel>loyalty_mysql4</resourceModel>
            </loyalty>
            <loyalty_mysql4>
                <class>Magestore_Loyalty_Model_Mysql4</class>
                <entities>
                    <loyalty>
                        <table>loyalty</table>
                    </loyalty>
                </entities>
            </loyalty_mysql4>
            <connector>
                <rewrite>
                    <customer>Magestore_Loyalty_Model_Customer</customer>
                </rewrite>
            </connector>
        </models>
        <resources>
            <loyalty_setup>
                <setup>
                    <module>Magestore_Loyalty</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </loyalty_setup>
            <loyalty_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </loyalty_write>
            <loyalty_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </loyalty_read>         
        </resources>
        <blocks>            
            <loyalty>
                <class>Magestore_Loyalty_Block</class>
            </loyalty>
        </blocks>
        <helpers>            
            <loyalty>
                <class>Magestore_Loyalty_Helper</class>
            </loyalty>
        </helpers>
        <events>
            <!-- Rewardpoints Earning Total -->
