<config>
    <modules>
        <Simi_Cloudconnector>
            <version>0.1.0</version>
        </Simi_Cloudconnector>
    </modules>
    <frontend>
        <routers>
            <cloudconnector>
                <use>standard</use>
                <args>
                    <module>Simi_Cloudconnector</module>
                    <frontName>cloudconnector</frontName>
                </args>
            </cloudconnector>
        </routers>
        <layout>
            <updates>
                <cloudconnector>
                    <file>cloudconnector.xml</file>
                </cloudconnector>
            </updates>
        </layout>
        <translate>
            <modules>
                <Simi_Cloudconnector>
                    <files>
                        <default>Simi_Cloudconnector.csv</default>
                    </files>
                </Simi_Cloudconnector>
            </modules>
        </translate>
        <events>
            <payment_method_is_active>
                <observers>
                    <paypalmobilement_payment_method_is_active>
                        <class>cloudconnector/observer</class>
                        <method>paymentMethodIsActive</method>
                    </paypalmobilement_payment_method_is_active>
                </observers>
            </payment_method_is_active>
            <sales_quote_collect_totals_before>
                <observers>
                    <frontend_shipping_rates_sales_quote_collect_totals_before>
                        <class>cloudconnector/observer</class>
                        <method>hideShippingMethods</method>
                    </frontend_shipping_rates_sales_quote_collect_totals_before>
                </observers>
            </sales_quote_collect_totals_before>
        </events>
    </frontend>
    <admin>
        <routers>
            <cloudconnectoradmin>
                <use>admin</use>
                <args>
                    <module>Simi_Cloudconnector</module>
                    <frontName>cloudconnectoradmin</frontName>
                </args>
            </cloudconnectoradmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <cloudconnector>
                    <file>cloudconnector.xml</file>
                </cloudconnector>
            </updates>
        </layout>
        <translate>
            <modules>
                <Simi_Cloudconnector>
                    <files>
                        <default>Simi_Cloudconnector.csv</default>
                    </files>
                </Simi_Cloudconnector>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <models>
            <cloudconnector>
                <class>Simi_Cloudconnector_Model</class>
                <resourceModel>cloudconnector_mysql4</resourceModel>
            </cloudconnector>
            <cloudconnector_mysql4>
                <class>Simi_Cloudconnector_Model_Mysql4</class>
                <entities>
                    <sync>
                        <table>simicart_cloud_update</table>
                    </sync>
                </entities>
            </cloudconnector_mysql4>
        </models>
        <resources>
            <cloudconnector_setup>
                <setup>
                    <module>Simi_Cloudconnector</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cloudconnector_setup>
            <cloudconnector_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </cloudconnector_write>
            <cloudconnector_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </cloudconnector_read>
        </resources>
        <blocks>
            <cloudconnector>
                <class>Simi_Cloudconnector_Block</class>
            </cloudconnector>
        </blocks>
        <helpers>
            <cloudconnector>
                <class>Simi_Cloudconnector_Helper</class>
            </cloudconnector>
        </helpers>
        <events>
            <customer_group_save_after>
                <observers>
                    <cloudconnector_observers>
                        <class>cloudconnector/observer</class>
                        <method>customerGroupSaveAfter</method>
                    </cloudconnector_observers>
                </observers>
            </customer_group_save_after>
            <customer_save_after>
                <observers>
                    <cloudconnector_observers>
                        <class>cloudconnector/observer</class>
                        <method>customerSaveAfter</method>
                    </cloudconnector_observers>
                </observers>
            </customer_save_after>
            <catalog_category_save_after>
                <observers>
                    <cloudconnector_observers>
                        <class>cloudconnector/observer</class>
                        <method>categorySaveAfter</method>
                    </cloudconnector_observers>
                </observers>
            </catalog_category_save_after>
            <catalog_entity_attribute_save_after>
                <observers>
                    <cloudconnector_observers>
                        <class>cloudconnector/observer</class>
                        <method>attributeSaveAfter</method>
                    </cloudconnector_observers>
                </observers>
            </catalog_entity_attribute_save_after>
            <eav_entity_attribute_set_save_after>
                <observers>
                    <cloudconnector_observers>
                        <class>cloudconnector/observer</class>
                        <method>attributeSetSaveAfter</method>
                    </cloudconnector_observers>
                </observers>
            </eav_entity_attribute_set_save_after>
            <catalog_product_save_after>
                <observers>
                    <cloudconnector_observers>
                        <class>cloudconnector/observer</class>
                        <method>productSaveAfter</method>
                    </cloudconnector_observers>
                </observers>
            </catalog_product_save_after>
            <sales_order_save_after>
                <observers>
                    <cloudconnector_observers>
                        <class>cloudconnector/observer</class>
                        <method>orderSaveAfter</method>
                    </cloudconnector_observers>
                </observers>
            </sales_order_save_after>
            <sales_order_invoice_save_after>
                <observers>
                    <cloudconnector_observers>
                        <class>cloudconnector/observer</class>
                        <method>invoiceSaveAfter</method>
                    </cloudconnector_observers>
                </observers>
            </sales_order_invoice_save_after>
            <sales_order_shipment_save_after>
                <observers>
                    <cloudconnector_observers>
                        <class>cloudconnector/observer</class>
                        <method>shipmentSaveAfter</method>
                    </cloudconnector_observers>
                </observers>
            </sales_order_shipment_save_after>
            <sales_order_creditmemo_save_after>
                <observers>
                    <cloudconnector_observers>
                        <class>cloudconnector/observer</class>
                        <method>creditmemoSaveAfter</method>
                    </cloudconnector_observers>
                </observers>
            </sales_order_creditmemo_save_after>
        </events>

    </global>
    <default>
        <cloudconnector>
            <general>
                <enable>1</enable>
                <web_hook></web_hook>
            </general>
        </cloudconnector>

        <payment>
            <simi_payment>
                <title>Simi Custom Payment Method</title>
                <active>1</active>
                <order_status>pending</order_status>
                <sallowspecific>0</sallowspecific>
                <payment_action>sale</payment_action>
                <name>Method Name</name>
                <model>cloudconnector/payment</model>
            </simi_payment>
        </payment>

        <carriers>
            <simi_shipping>
                <title>Simi Custom Shipping Method</title>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <price>0.00</price>
                <name>Method Name</name>
                <model>cloudconnector/shipping</model>
            </simi_shipping>
        </carriers>
    </default>
