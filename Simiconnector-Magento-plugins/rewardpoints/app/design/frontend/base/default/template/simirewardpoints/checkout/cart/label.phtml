/**
 * Simirewardpoints show on Review Total
 * 
 * @see Simi_Simirewardpoints_Block_Checkout_Cart_Label
 */
?>
<?php if ($this->isEnable()): ?>

    <?php
    /** @var $_pointHelper Simi_Simirewardpoints_Helper_Point */
    $_pointHelper = $this->getPointHelper();
    $_spendingPoint = $this->getSpendingPoint();
    $_earningPoints = $this->getEarningPoint();
    $_earningPointsByCoupon = Mage::helper('simirewardpoints/calculation_earning')->getEarningPointByCoupon();
    ?>
    <?php if ($_spendingPoint || $_earningPoints  || $_earningPointsByCoupon): ?>
        <?php if ($this->getColspan() == 1): ?><thead><?php endif ?>
            <?php if ($_spendingPoint): ?>
                <tr>
                    <td class="a-right" id="check-spend-point" colspan="<?php echo $this->getColspan() ?>" style="<?php echo $this->getTotal()->getStyle() ?>">
                        <strong style="font-size: 13px;">
                            <?php
                            if (Mage::app()->getRequest()->getModuleName() == 'webpos')
                                echo $this->__('Customer will spend');
                            else {
                                echo $this->__('You will spend');
                            }
                            ?>:</strong>
                    </td>
                    <td class="a-right" style="min-width: 70px;<?php echo $this->getTotal()->getStyle() ?>">
                        <?php echo $_pointHelper->format($_spendingPoint) ?>
                    </td>
                </tr>
            <?php endif ?>
            <?php if ($_earningPoints): ?>
                <tr>
                    <td class="a-right" colspan="<?php echo $this->getColspan() ?>" style="<?php echo $this->getTotal()->getStyle() ?>">
                        <strong style="font-size: 13px;"><?php if (Mage::app()->getRequest()->getModuleName() == 'webpos')
                                echo $this->__('Customer will earn');
                            else {
                                if(Mage::getSingleton('customer/session')->isLoggedIn() || $this->getQuote()->getCustomerGroupId() > 0){
                                    echo $this->__('You will earn');
                                }else{
									if(Mage::helper('core')->isModuleOutputEnabled('Simi_Onestepcheckout') && $this->getRequest()->getModuleName() == 'onestepcheckout'){
										echo "<a href='javascript:void(0);' onclick='login_popup.show();'>".$this->__('Login')."</a> ". $this->__('to earn');
									}else{
										echo "<a href='".Mage::getUrl('simirewardpoints/index/redirectLogin',array('redirect'=>base64_encode(Mage::helper('core/url')->getCurrentUrl())))."'>".$this->__('Login')."</a> ". $this->__('to earn');
									}
                                }
                            } ?>:</strong>
                    </td>
                    <td class="a-right" style="min-width: 70px;<?php echo $this->getTotal()->getStyle() ?>">
                        <?php echo $_pointHelper->format($_earningPoints) ?>
                    </td>
                </tr>
            <?php endif ?>
            <?php if ($_earningPointsByCoupon): ?>
                <tr>
                    <td class="a-right" colspan="<?php echo $this->getColspan() ?>" style="<?php echo $this->getTotal()->getStyle() ?>">
                        <?php echo $this->__('Earn Points (%s)', Mage::helper('simirewardpoints/calculation_earning')->getCouponEarnPoints()); ?>
                    </td>
                    <td class="a-right" style="min-width: 70px;<?php echo $this->getTotal()->getStyle() ?>">
                        <?php echo $_pointHelper->format($_earningPointsByCoupon) ?>
                    </td>
                </tr>
            <?php endif ?>
            <?php if ($this->getColspan() == 1): ?></thead><?php endif ?>
    <?php endif ?>

    <?php

 endif // End if ($this->isEnable()) ?>
