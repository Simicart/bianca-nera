/**
 * Simirewardpoints earning on sidebar template
 * 
 * @see Simi_Simirewardpoints_Block_Checkout_Sidebar_Action
 */
?>
<?php if ($this->enableDisplay()&&Mage::helper('simirewardpoints/calculation_earning')->getTotalPointsEarning()): ?>

    <div class="simirewardpoints-cart-sidebar" style="margin-left: 20px;">
        <?php echo $this->getImageHtml(true) ?>
        <?php
        if (Mage::getSingleton('customer/session')->isLoggedIn()) {
            echo $this->__('Check out now to earn %s!',Mage::helper('simirewardpoints/point')->format(Mage::helper('simirewardpoints/calculation_earning')->getTotalPointsEarning()));

        } else {
			if(Mage::helper('core')->isModuleOutputEnabled('Simi_Onestepcheckout') && $this->getRequest()->getModuleName() == 'onestepcheckout'){
				echo "<a href='javascript:void(0);'  onclick='login_popup.show();'>".$this->__('Login')."</a><span style='margin-left: 4px;'>". $this->__('and check out to earn %s!',Mage::helper('simirewardpoints/point')->format(Mage::helper('simirewardpoints/calculation_earning')->getTotalPointsEarning())).'</span>';
			}else{
				$authUrl = $this->helper('core/url')->getCurrentUrl();
				Mage::getSingleton('customer/session')->setBeforeAuthUrl($authUrl);
				echo "<a href='".Mage::getUrl('simirewardpoints/index/redirectLogin',array('redirect'=>base64_encode(Mage::helper('core/url')->getCurrentUrl())))."'>".$this->__('Login')."</a><span style='margin-left: 4px;'>". $this->__('and check out to earn %s!',Mage::helper('simirewardpoints/point')->format(Mage::helper('simirewardpoints/calculation_earning')->getTotalPointsEarning())).'</span>';
			}
        }
        ?>
    </div>
<?php endif; ?>